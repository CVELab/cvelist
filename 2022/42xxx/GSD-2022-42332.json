            "workaround": {
                "workaround_data": {
                    "description": {
                        "description_data": [
                            {
                                "lang": "eng",
                                "value": "Not migrating or snapshotting guests will avoid the vulnerability.\n\nRunning only HVM or PVH guests and only in HAP (Hardware Assisted\nPaging) mode will also avoid the vulnerability."
                            }
                        ]
                    }
                }
            }
